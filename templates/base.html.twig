{% set s_default_snippet = sulu_snippet_load_by_area('site_settings') %}
{% set s_default = s_default_snippet ? s_default_snippet.content : {} %}

<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta
		name="viewport" content="width=device-width, initial-scale=1">

		{# Google fonts #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Manrope:wght@200..800&display=swap" rel="stylesheet">

		{# Favicon from snippet #}
		<link rel="icon" type="image/x-icon" href="{{ s_default.favicon.url|default('/favicon.ico') }}">

		{% block meta %}
			{{ include('@SuluWebsite/Extension/seo.html.twig', {
			seo: extension.seo|default([]),
			content: content|default([]),
			localizations: localizations|default([]),
			shadowBaseLocale: shadowBaseLocale|default(),
		}) }}
		{% endblock %}

		{% block style %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body
		class="body--{{ content.title|default(null)|lower|replace({' ': '-'}) }}">
		{# Header - now has access to logos via s_default #}
		{% include 'layout/header-main.html.twig' %}

		{# Content #}
		<main class="main-content"> {% block content %}{% endblock %}
			</main>

			{# Footer - now has access to footer data via s_default #}
			{% include 'layout/footer-main.html.twig' %}

			{% block javascripts %}{% endblock %}
			{{ encore_entry_script_tags('app') }}
		</body>
	</html>
