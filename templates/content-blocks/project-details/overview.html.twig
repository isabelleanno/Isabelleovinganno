<div class="row pdp-section pdp-section--left">
	{% if content.image.url is not empty %}
		<div class="mb-4 mb-xl-0 col-12 col-lg col-xl-4">
			{% include 'components/image.html.twig' with {
        	image: content.image,
   		 } %}
		</div>
	{% endif %}
	<div class="col d-flex flex-column justify-content-around">
		{% include 'components/header.html.twig' with { 
            content: content,
            headerCssClasses: headerCssClasses|default(''),
        } %}
		{% include 'components/text.html.twig' with { 
            content: content,
            textCssClasses: textCssClasses|default('')
        } %}
		{% if content.tech_stack is not empty %}
			<div class="row">
				{% for item in content.tech_stack %}
					{% if item.icon is not empty %}
						<div class="col-auto text-center border-right-white {{ loop.first ? 'pe-4' : 'px-4' }}">
							{% include 'components/image.html.twig' with { 
								image: item.icon,
								imageCssClasses: 'white-icon mb-2',
								format: '32x32'
							} %}
							<p class="mb-0 text-white">{{item.text}}</p>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		{% endif %}
	</div>
</div>
