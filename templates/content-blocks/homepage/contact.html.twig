<div class="row">
	<div class="col-lg-6">
		{% include 'content-blocks/text-button.html.twig' with {
			content: content,
			classes: 'd-flex flex-column',
			headerCssClasses: 'mb-4'
		} %}
	</div>
	<div class="col-lg-6">
		{% set contactForm = sulu_form_get_by_id(1, 'page', 1) %}
		{% if contactForm is defined and contactForm is not null %}
			{% if app.request.get('send') %}
				<div class="alert-frame align-items-center justify-content-center w-100 position-fixed">
					<div class="alert alert-success" role="alert">
						<h4 class="alert-heading">{{s_default.contact_success_msg_header|default("âœ…")}}</h4>
						<p>{{s_default.contact_success_msg_text|default(null)}}</p>
					</div>
				</div>
			{% endif %}
			{% form_theme contactForm 'forms/contact-theme.html.twig' %}
			{{ form(contactForm) }}{% endif %}
		</div>
	</div>
