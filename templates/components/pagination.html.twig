<nav aria-label="Page navigation" class="mt-4 position-absolute bottom-0 w-100">
	<ul class="pagination justify-content-center mb-0 pb-3">

		{% if params.page > 1 %}
			<li class="page-item">
				<a class="btn btn-outline-secondary me-3" href="?p={{ params.page - 1 }}" aria-label="{{ s_default.previous }}">
					{% include 'utilities/icon.html.twig' with { icon: 'arrow' } %}
					{{ s_default.previous }}
				</a>
			</li>
			<li class="page-item rounded-sm">
				<a class="page-link d-flex justify-content-center align-items-center" href="?p={{ params.page - 1 }}">
					{{ params.page - 1 }}
				</a>
			</li>

			<li class="page-item rounded-sm active">
				<span class="page-link d-flex justify-content-center align-items-center">
					{{ params.page }}
				</span>
			</li>
			{% if params.hasNextPage %}
				<li class="page-item rounded-sm">
					<a class="page-link d-flex justify-content-center align-items-center" href="?p={{ params.page + 1 }}">
						{{ params.page + 1 }}
					</a>
				</li>
				<li class="page-item">
					<a class="btn btn-outline-secondary ms-3" href="?p={{ params.page + 1 }}" aria-label="{{ s_default.next }}">
						{{ s_default.next }}
						{% include 'utilities/icon.html.twig' with { icon: 'arrow' } %}
					</a>
				</li>
			{% endif %}
		{% endif %}
	</ul>
</nav>
